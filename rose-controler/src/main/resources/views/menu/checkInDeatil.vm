                <option value="0" selected="true">已来到店办理入住</option>
                <option value="1">未到店办理预定</option>
            </select>
            <a href="#" class="easyui-linkbutton" iconCls="icon-search" onclick="searchOrder()">查询</a>&nbsp;&nbsp;&nbsp;&nbsp;
        </div>

