<!DOCTYPE html>
<html xmlns:th="http://www.thymeleaf.org">
<head>
    <meta charset="UTF-8" />
    <link rel="stylesheet" th:href="@{/static/easyui/themes/easy.common.css}"></link>
    <script th:inline="javascript">
        var contextPath = [[@{/}]];
        var interceptorToken = [[${token}]];
        var interceptorUserId = [[${userId}]];
    </script>
    <script th:src="@{/static/easyui/easy.common.js}"></script>
    <script th:src="@{/static/myFun.js}"></script>
    <script th:inline="javascript">
        function detailHotelRoomShow() {
            var rows = $('#manager').datagrid('getSelections');
            if (rows.length > 0) {
                var id = rows[0].id;
                var result = ajaxSynchGet("user/hotelRoomEnter/getDetail", {"id":id});
                if (result.code == '200') {
                    var data = result.data;
                    $("#detailRoomNo").text(data.roomNo);
                    if (data.roomUpshelfState == 0) {
                        $("#detailRoomUpshelfState").text('上架');
                    } else {
                        $("#detailRoomUpshelfState").text('下架');
                    }
                    $("#detailRoomFloorNum").text(data.roomFloorNum);
                    $("#detailBedNum").text(data.bedNum);
                    $("#detailRoomTypeName").text(data.roomTypeName);
                    if (data.roomWindowFlag == 0) {
                        $("#detailRoomWindowFlag").text('无');
                    } else if (data.roomWindowFlag == 1) {
                        $("#detailRoomWindowFlag").text('有普通窗户');
                    } else if (data.roomWindowFlag == 2) {
                        $("#detailRoomWindowFlag").text('有海景窗户');
                    }
                    if (data.roomWcFlag == 0) {
                        $("#detailRoomWcFlag").text('有');
                    } else {
                        $("#detailRoomWcFlag").text('无');
                    }
                    if (data.calcCheckInNumBedFlag == 0) {
                        $("#detailRoomWcFlag").text('是');
                    } else {
                        $("#detailRoomWcFlag").text('否');
                    }
                    $("#detailSellPrice").text(data.sellPrice);
                    $("#detailSellPriceDesc").text(data.sellPriceDesc);
                    $("#detailCheckOutDesc").text(data.checkOutDesc);
                    $("#detailRoomOverallDesc").text(data.roomOverallDesc);
                    $('#manager_detail').dialog('open');
                } else {
                    alertWarn(result.msg);
                }
            } else {
                alertWarn("请先选择记录！");
            }
        }
        function addHotelRoomShow() {
            $('#manager_add').dialog('open');
            $('#addRoomNo').focus();
        }
        function editHotelRoomShow() {
            var rows = $('#manager').datagrid('getSelections');
            if (rows.length > 0) {
                var id = rows[0].id;
                var result = ajaxSynchGet("user/operationHotel/getDetail", {"id":id});
                if (result.code == '200') {
                    var hotelName = result.data.hotelName;
                    var remark = result.data.remark;
                    $('#hotelNameEdit').val(hotelName);
                    $('#hotelRemarkEdit').val(remark);
                    $('#manager_edit').dialog('open');
                } else {
                    alertWarn(result.msg);
                }
            } else {
                alertWarn("请先选择记录！");
            }
        }
        function addHotelRoomCommit() {
            if ($('#manager_add').form('validate')) {
                var roomNo = $('#addRoomNo').val();
                var roomFloorNum = $('#addRoomFloorNum').combobox('getValue');
                var roomUpshelfState = $('#addRoomUpshelfState').combobox('getValue');
                var roomTypeId = $('#addRoomTypeId').combobox('getValue');
                if (roomTypeId = '请选择') {
                    roomTypeId = null;
                }
                var roomWindowFlag = $('#addRoomWindowFlag').combobox('getValue');
                var roomWcFlag = $('#addRoomWcFlag').combobox('getValue');
                var bedNum = $('#addBedNum').val();
                var hourRoomFlag = $('#addHourRoomFlag').combobox('getValue');
                var sellPrice = $('#addSellPrice').val();
                var sellPriceDesc = $('#addSellPriceDesc').val();
                var checkOutDesc = $('#addCheckOutDesc').val();
                var roomOverallDesc = $('#addRoomOverallDesc').val();

                var param = {
                    "roomNo":roomNo, "roomFloorNum":roomFloorNum,
                    "roomUpshelfState":roomUpshelfState, "roomTypeId":roomTypeId,
                    "roomWindowFlag":roomWindowFlag, "roomWcFlag":roomWcFlag,
                    "bedNum":bedNum, "hourRoomFlag":hourRoomFlag,
                    "sellPrice":sellPrice, "sellPriceDesc":sellPriceDesc,
                    "checkOutDesc":checkOutDesc, "roomOverallDesc":roomOverallDesc
                };

                var result = ajaxSynchPostJson("user/hotelRoomEnter/save", param);
                if (result.code == '200') {
                    alertSuccess();
                    $('#manager_add').dialog('close');
                    searchHotelRoom();
                } else {
                    alertWarn(result.msg);
                }
            }
        }
        function editHotelRoomCommit() {
            if ($('#manager_edit').form('validate')) {
                var rows = $('#manager').datagrid('getSelections');
                if (rows.length > 0) {
                    var id = rows[0].id;
                    var roomNo = $('#addRoomNo').val();
                    var roomFloorNum = $('#addRoomFloorNum').combobox('getValue');
                    var roomUpshelfState = $('#addRoomUpshelfState').combobox('getValue');
                    var roomTypeId = $('#addRoomTypeId').combobox('getValue');
                    if (roomTypeId = '请选择') {
                        roomTypeId = null;
                    }
                    var roomWindowFlag = $('#addRoomWindowFlag').combobox('getValue');
                    var roomWcFlag = $('#addRoomWcFlag').combobox('getValue');
                    var bedNum = $('#addBedNum').val();
                    var hourRoomFlag = $('#addHourRoomFlag').combobox('getValue');
                    var sellPrice = $('#addSellPrice').val();
                    var sellPriceDesc = $('#addSellPriceDesc').val();
                    var checkOutDesc = $('#addCheckOutDesc').val();
                    var roomOverallDesc = $('#addRoomOverallDesc').val();

                    var param = {
                        "id":id,
                        "roomNo":roomNo, "roomFloorNum":roomFloorNum,
                        "roomUpshelfState":roomUpshelfState, "roomTypeId":roomTypeId,
                        "roomWindowFlag":roomWindowFlag, "roomWcFlag":roomWcFlag,
                        "bedNum":bedNum, "hourRoomFlag":hourRoomFlag,
                        "sellPrice":sellPrice, "sellPriceDesc":sellPriceDesc,
                        "checkOutDesc":checkOutDesc, "roomOverallDesc":roomOverallDesc
                    };

                    var result = ajaxSynchPostJson("user/hotelRoomEnter/save", param);
                    if (result.code == '200') {
                        alertSuccess();
                        $('#manager_edit').dialog('close');
                        searchHotelRoom();
                    } else {
                        alertWarn(result.msg);
                    }
                }
            }
        }
        function opertHotelState(state) {
            var showMsg = '';
            if (state == 0) {
                showMsg = '您确定上架该酒店房间吗？';
            } else if (state == 1) {
                showMsg = '您确定下架该酒店房间吗？';
            } else {
                showMsg = '您确定删除该酒店房间吗？';
            }
            var rows = $('#manager').datagrid('getSelections');
            if (rows.length > 0) {
                $.messager.confirm('确定操作', showMsg, function (flag) {
                    if (flag) {
                        var id = rows[0].id;
                        $('#manager').datagrid('loading');
                        var result = ajaxSynchGet("user/hotelRoomEnter/opert", {"id": id, "state": state});
                        $('#manager').datagrid('loaded');
                        searchHotelRoom();
                        alertInfo(result.msg);
                    }
                });
            } else {
                alertWarn("请先选择记录！");
            }
        }

        function dataGridInit() {
            $('#manager').datagrid({
                fit : true,
                fitColumns : true,
                striped : true,
                rownumbers : true,
                border : false,
                pagination : true,
                singleSelect:true,
                toolbar : '#manager_tool',
                columns : [[
                    {
                        field : 'id',
                        width : 100,
                        hidden : true
                    },
                    {
                        field : 'roomNo',
                        title : '房间编号',
                        width : 100,
                    },
                    {
                        field : 'roomFloorNum',
                        title : '所在楼层',
                        width : 100,
                    },
                    {
                        field : 'roomTypeName',
                        title : '类别名称',
                        width : 100,
                    },
                    {
                        field : 'roomUpshelfState',
                        title : '状态',
                        width : 100,
                        formatter: function(value,row,index){
                            if (value == 0){
                                return "上架";
                            } else {
                                return "下架";
                            }
                        }
                    },
                    {
                        field : 'createDate',
                        title : '创建日期',
                        width : 100,
                    }
                ]]
            });
        }
        function searchHotelRoom() {
            var roomNo = $('#roomNoForSearch').val();
            var roomTypeId = $('#roomTypeIdForSearch').combobox('getValue');
            if (roomTypeId == -1) {
                roomTypeId = null;
            }
            var roomFloorNum = $('#roomFloorNumForSearch').combobox('getValue');
            if (roomFloorNum == '请选择') {
                roomFloorNum = null;
            }
            var roomUpshelfState = $('#roomUpshelfStateForSearch').combobox('getValue');
            if (roomUpshelfState == '请选择') {
                roomUpshelfState = null;
            }
            var result = ajaxSynchPostJson("user/hotelRoomEnter/search", {"roomNo":roomNo, "roomTypeId":hotelId, "roomFloorNum":roomFloorNum, "roomUpshelfState":roomUpshelfState, "page":1, "rows":10});
            if (result.code == '200') {
                dataGridPageInit();
                $('#manager').datagrid('loadData', result.data);
            } else {
                alertWarn(result.msg);
            }
        }
        function dataGridPageInit() {
            var p = $('#manager').datagrid('getPager');
            $(p).pagination({
                pageNumber : 1,
                pageSize : 10,
                pageList : [10, 20, 30, 40, 50],
                onSelectPage:function(pageNumber, pageSize){
                    var result = ajaxSynchPostJson("user/operationHotel/search", {"page":pageNumber, "rows":pageSize});
                    if (result.code == '200') {
                        $('#manager').datagrid('loadData', result.data);
                    }
                },
            });
        }

        function webPageInit() {
            var result = ajaxSynchGet("user/hotelRoomEnter/listHotelRoomTypeByCurrentUserReleatHotel", null);
            if (result.code == '200') {
                $('#roomTypeIdForSearch').combobox('loadData', result.data);
                $('#roomTypeIdForSearch').combobox('setValue', -1);
            } else {
                alertWarn(result.msg);
            }
        }

        $(function () {
            dataGridInit();
            searchHotelRoom();
            webPageInit();
        });
    </script>
</head>
<body>
<table id="manager">
    <div id="manager_tool">
        <div style="margin-bottom:5px;">
            <a href="#" class="easyui-linkbutton" iconCls="icon-add-green" plain="true" onclick="detailHotelRoomShow()">查看</a>
            <a href="#" class="easyui-linkbutton" iconCls="icon-add-green" plain="true" onclick="addHotelRoomShow()">新增</a>
            <a href="#" class="easyui-linkbutton" iconCls="icon-edit-yellow" plain="true" onclick="editHotelRoomShow()">编辑</a>
            <a href="#" class="easyui-linkbutton" iconCls="icon-tip" plain="true" onclick="opertHotelState(1)">下架</a>
            <a href="#" class="easyui-linkbutton" iconCls="icon-ok" plain="true" onclick="opertHotelState(0)">上架</a>
            <a href="#" class="easyui-linkbutton" iconCls="icon-cancel" plain="true" onclick="opertUserState(2)">删除</a>
        </div>

        <div style="padding:0 0 0 7px;color:#333;">
            房间编号：<input type="text" class="textbox" id="roomNoForSearch" style="width:110px" />
            房间类型：
            <select class="easyui-combobox" id="roomTypeIdForSearch" style="width:100px;" data-options="valueField:'id',textField:'roomTypeName'"></select>
            房间楼层：
            <select class="easyui-combobox" id="roomFloorNumSearch" style="width:100px;">
                <option value="请选择" selected="true">请选择</option>
                <option value="1">1楼</option>
                <option value="2">2楼</option>
                <option value="3">3楼</option>
                <option value="4">4楼</option>
                <option value="5">5楼</option>
                <option value="6">6楼</option>
                <option value="7">7楼</option>
                <option value="8">8楼</option>
                <option value="9">9楼</option>
            </select>
            房间状态：
            <select class="easyui-combobox" id="roomUpshelfStateForSearch" style="width:100px;">
                <option value="请选择" selected="true">请选择</option>
                <option value="0">上架</option>
                <option value="1">下架</option>
            </select>
            <a href="#" class="easyui-linkbutton" iconCls="icon-search" onclick="searchHotelRoom()">查询</a>
        </div>
    </div>
</table>

